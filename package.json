{
  "name": "webpack-nunjucks-boilerplate",
  "description": "Webpack + Nunjucks boilerplate for static websites that has all the necessary modern tools and optimizations built-in",
  "repository": "git@github.com:alsolovyev/webpack-nunjucks-boilerplate.git",
  "author": "janeRivas <solovyev.a@icloud.com> (https://github.com/alsolovyev)",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "serve": "cross-env NODE_ENV=development TS_SUPPORT=false webpack serve --profile --progress --config ./config/webpack.config.js",
    "build": "cross-env NODE_ENV=production TS_SUPPORT=false webpack --profile --progress --config ./config/webpack.config.js",
    "deploy": "git subtree push --prefix dist origin gh-pages"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "eslint": "^7.29.0",
    "eslint-webpack-plugin": "^2.5.4",
    "fork-ts-checker-webpack-plugin": "^6.2.12",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "nunjucks": "^3.2.3",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.0",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-webpack-plugin": "^2.2.0",
    "svg-sprite-loader": "^6.0.7",
    "svgo-loader": "^3.0.0",
    "thread-loader": "^3.0.4",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.4",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
